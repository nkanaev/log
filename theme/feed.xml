<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
    <channel>
        <title>{{title}}</title>
        <description>Feed for "{{title}}"</description>
        <link>{{host}}{{root}}</link>
        {{#for post : posts}}
        <item>
            <title>{{post.name}}</title>
            <link>{{host}}{{root}}{{post.link}}</link>
            <guid isPermaLink="false">{{post.guid}}</guid>
            <pubDate>{{post.date_rfc822}}</pubDate>
        </item>
        {{#end}}
    </channel>
</rss>
